@using ContactRegistrationMVC.Enums;
@model UserModel
@{
    ViewData["Title"] = "Register user";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<form asp-controller="User" asp-action="Create" method="post">
    <div class="mb-3">
        <label for="name">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter user name">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Enter user e-mail">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Enter user login">
        <span asp-validation-for="@Model.Login" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="profile">Profile</label>
        <select asp-for="Profile" class="form-control">
            <option value="">Select</option>
            <option value="@ProfileEnum.Admin">Admin</option>
            <option value="@ProfileEnum.Standard">Standard</option>
        </select>
        <span asp-validation-for="@Model.Profile" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="password">Password</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter user password">
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Register</button>
    <a class="btn btn-secondary btn-block" asp-controller="User" asp-action="Index">Back to list</a>
</form>