@model UserModel
@{
    ViewData["Title"] = "Remove user";
}

<div class="text-center">
    <h3 class="display-4">@Model.Name will be deleted permanently</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="User" asp-action="Index">Cancel</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="User" asp-action="Delete" asp-route-id="@Model.Id">Remove</a>